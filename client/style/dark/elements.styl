html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, p, pre, code, a, img,
ol, ul, li, fieldset, form, label,
article, aside, footer, header, section
  margin 0
  padding 0
  border 0
  font-size 100%
  font inherit
  vertical-align baseline

footer, header, section, label, select, input
  display block

html, body
  height 100%

html
  font-size 100.01%

body
  background-color bg-body
  color fg-body
  font-family helvetica, arial, freesans, clean, sans-serif
  font-size font-base

h1, h2, h3, h4, h5, h6
  font-weight normal

h1
  margin 0.5em 0 0.3em
  font-size font-title
  font-weight bold
  color #ccc
  text-shadow 0 1px 2px glint-bright

h2, h3
  clear both

h2
  margin-top 0.5em
  font-size font-subtitle

h3
  margin-top 1.2em

h4, h5
  display inline

h3, h4, h5, p, pre
  line-height 1.3
  font-size font-copy

p, pre
  margin-top 1em

ol, ul, menu, li
  list-style none

a, input[type="submit"]
  cursor pointer

a
  color inherit
  text-decoration underline

label
  margin 0.5em 0 0.2em

input, select
  width 100%
  border none
  background-color fg-body
  color bg-body
  outline-color bg-action
  font-family helvetica, arial, freesans, clean, sans-serif

input
  padding 4px
  box-sizing border-box

