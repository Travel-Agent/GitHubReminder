html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, p, pre, code, a, img,
ol, ul, li, fieldset, form, label,
article, aside, footer, header, section
  margin 0
  padding 0
  border 0
  font-size 100%
  font inherit
  vertical-align baseline

footer, header, section, label, select, input
  display block

html, body
  height 100%

html
  font-size 100.01%

body
  padding 10px
  line-height 1
  background-color bg-body
  color fg-body
  font-family helvetica, arial, freesans, clean, sans-serif
  font-size font-base

h1, h2, h3, h4, h5, h6
  font-weight normal

h1
  margin-bottom 0.8em
  font-size font-title
  letter-spacing 0.1em

h2, h3
  clear both
  margin-top 0.5em

h2
  font-size font-subtitle

h4, h5
  display inline

p, li
  line-height 1.2

p
  margin-top 1em

ol, ul, menu, li
  list-style none

a, input[type="submit"]
  cursor pointer

a
  border-bottom 2px dotted fg-body
  color inherit
  text-decoration none

label
  margin 0.5em 0 0.2em

input, select
  width 100%
  border none
  background-color fg-body
  color bg-body
  outline-color yellow
  font-family helvetica, arial, freesans, clean, sans-serif

input
  padding 4px
  box-sizing border-box

