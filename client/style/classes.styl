.action
  margin-top 2em

.smallprint
  margin-top 3em
  padding-bottom 1em
  font-size font-small

.avatar
  float left
  height 32px
  margin-top 0.5em
  border 2px solid fg-body

.username
  margin 0.9em 0 1.5em 45px

.repo
  display block
  margin-top 0.3em
  padding 8px
  border none

.repo:hover,
.repo:active
  background-color fg-body
  color bg-body

.description
  display inline

.clearfix
  zoom 1
  &:before, &:after
    content '.'
    display block
    height 0
    overflow hidden
  &:after
    clear both

.hidden-text
  display block
  overflow hidden
  white-space nowrap
  text-indent 200%

.hidden-element
  @extend .hidden-text

  height 0
  line-height 0
  font-size 0

