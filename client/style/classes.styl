.clearfix
  zoom 1
  &:before, &:after
    content '.'
    display block
    height 0
    overflow hidden
  &:after
    clear both

.hidden-text
  display block
  overflow hidden
  white-space nowrap
  text-indent 200%

.hidden-element
  @extend .hidden-text

  height 0
  line-height 0
  font-size 0

