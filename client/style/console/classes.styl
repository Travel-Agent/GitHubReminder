.action
  margin-top 2em

.smallprint
  margin-top 3em
  padding-bottom 1em
  font-size font-small

.avatar
  float left
  height 32px
  margin-top 0.5em
  border 2px solid fg-body

.username
  margin 0.8em 0 1.5em 42px

.repo
  display block
  margin-top 0.3em
  padding 8px
  border none

.repo:hover,
.repo:active
  background-color fg-body
  color bg-body

.description
  margin 0

.signout
  margin-top 0.3em

.news
  margin-bottom 0.5em

.control
  margin-top 0.6em

.control-part
  display inline

.inline-control
  width auto
  padding 0
  border none

.checkbox
  vertical-align top
  background-color fg-body
  color bg-body

.submit
  float right
  border-bottom 2px dotted fg-body
  background-color bg-body
  color fg-body
  font-family 'uni 05_53'
  font-size font-base

.clearfix
  zoom 1
  &:before, &:after
    content '.'
    display block
    height 0
    overflow hidden
  &:after
    clear both

